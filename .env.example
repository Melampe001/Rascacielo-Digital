# Environment Configuration

# Application
NODE_ENV=development
PORT=3000

# Build Configuration
BUILD_OPTIMIZE=true
BUILD_OUTPUT_DIR=./dist

# Security Configuration
SECURITY_LEVEL=moderate
SECURITY_FAIL_ON_HIGH=true

# Logging
LOG_LEVEL=info

# CI/CD
CI=false
GITHUB_ACTIONS=false

# Treesit Cloud Configuration
TREESIT_API_URL=https://api.treesit.cloud
TREESIT_API_KEY=your_api_key_here
TREESIT_API_SECRET=your_api_secret_here
TREESIT_REGION=us-east-1
TREESIT_ENV=production
TREESIT_INSTANCE_TYPE=t3.medium
TREESIT_AUTOSCALING=true
TREESIT_MIN_INSTANCES=1
TREESIT_MAX_INSTANCES=10

# Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
PASSWORD_HASH_ITERATIONS=10000

# Redis Configuration (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Orchestrator Configuration
ORCHESTRATOR_TIMEOUT=300000
ORCHESTRATOR_CONTINUE_ON_ERROR=false
ORCHESTRATOR_REPORT_DIR=./reports

# Deployment
DEPLOY_AUTO_ROLLBACK=true
DEPLOY_HEALTH_CHECK_RETRIES=3
DEPLOY_HEALTH_CHECK_INTERVAL=5000

# Database (if needed)
# DATABASE_URL=postgres://user:pass@localhost:5432/dbname

# API Keys (if needed)
# API_KEY=your_api_key_here
# GITHUB_TOKEN=your_github_token_here

# Vercel Configuration
# VERCEL_TOKEN=your_vercel_token_here
# VERCEL_ORG_ID=your_org_id_here
# VERCEL_PROJECT_ID=your_project_id_here
