# Environment Configuration

# Application
NODE_ENV=development
PORT=3000

# Build Configuration
BUILD_OPTIMIZE=true
BUILD_OUTPUT_DIR=./dist

# Security Configuration
SECURITY_LEVEL=moderate
SECURITY_FAIL_ON_HIGH=true

# Logging
LOG_LEVEL=info

# CI/CD
CI=false
GITHUB_ACTIONS=false

# Treesit Cloud Configuration
TREESIT_ENDPOINT=https://api.treesit.cloud
TREESIT_REGION=us-east-1
TREESIT_API_KEY=your_api_key_here
TREESIT_SECRET_KEY=your_secret_key_here
TREESIT_PROJECT_ID=your_project_id_here

# Treesit Storage
TREESIT_BUCKET=rascacielo-digital-storage

# Custom Domain (optional)
CUSTOM_DOMAIN=

# Monitoring
METRICS_ENABLED=true

# Database (if needed)
# DATABASE_URL=postgres://user:pass@localhost:5432/dbname

# Security
SESSION_SECRET=change_this_in_production
